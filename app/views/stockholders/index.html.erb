<p id="notice"><%= notice %></p>

<h1>Listing Stockholders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stockholders.each do |stockholder| %>
      <tr>
        <td><%= stockholder.name %></td>
        <td><%= stockholder.email %></td>
        <td><%= link_to 'Show', stockholder %></td>
        <td><%= link_to 'Edit', edit_stockholder_path(stockholder) %></td>
        <td><%= link_to 'Destroy', stockholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stockholder', new_stockholder_path %>
